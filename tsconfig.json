{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./app",
    "baseUrl": "./app", // Optional: Set base URL for non-relative imports
    "paths": {
      // Optional: Define custom paths for imports
      "*": ["*", "models/*", "routes/*"]
    }
  },
  "include": ["app/**/*.ts"],
  "exclude": ["node_modules"]
}